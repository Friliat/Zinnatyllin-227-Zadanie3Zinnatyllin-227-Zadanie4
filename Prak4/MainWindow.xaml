<Window x:Class="Prak4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prak4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,0,82,85">Значение l=</TextBlock>
        <TextBlock Grid.Row="2" Margin="0,0,82,85">Результат:</TextBlock>
        <TextBox x:Name="TexA" Margin="30"></TextBox>
        <TextBlock Grid.Row="1" Margin="0,0,82,85">Значение λ=
        </TextBlock>
        <TextBox x:Name="Texλ" Grid.Row="1" Margin="30"></TextBox>
        <TextBox Grid.Row="2" x:Name="TexRe" Margin="30"></TextBox>
        <Button   Grid.Row="3" Grid.Column="1"
                Content="Рассчитать" Click="Button_Click"></Button>
        <Grid ShowGridLines="True"></Grid>
    </Grid>
</Window>
